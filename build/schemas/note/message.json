{
  "$schema": "http://json-schema.org/draft/2020-12/schema",
  "$id": "https://gobl.org/draft-0/note/message",
  "$ref": "#/$defs/Message",
  "$defs": {
    "Message": {
      "properties": {
        "title": {
          "type": "string",
          "title": "Title"
        },
        "content": {
          "type": "string",
          "title": "Content"
        },
        "meta": {
          "patternProperties": {
            ".*": {
              "type": "string"
            }
          },
          "type": "object",
          "title": "Meta Data"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "content"
      ]
    }
  }
}